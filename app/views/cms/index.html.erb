<div class="col-md-12">
	<h2>Domestic Ware</h2><br/>
	<table class="table table-bordered table-striped" id="sortable">
		<thead>
	   		<tr>
	     		<th>ID</th>
	     		<th>Image</th>
	     		<th>Description</th>
				<th>Dimensions</th>
				<th></th>
	   		</tr>
	 	</thead>
	 	<tbody>
	   		<% @domesticwares.each do |dw| %>
				<tr data-item-id=<%= "#{dw.id}" %> class="item">
	    		<tr>
					<td width="7%"><%= dw.row_order_position %></td>
					<td class="thumbTiny" width="7%"><%= image_tag(dw.image, class: "thumb") %></td>
					<td width="38%"><%= dw.description1 %></td>
					<td width="38%"><%= dw.description2 %></td>
					<td width="10%">
						<%= link_to 'Edit', edit_domesticware_path(dw) %>
						<%= link_to 'Delete', dw, method: :delete, data: {confirm: "Are you sure you want to delete this record?"} %>
					</td>
	     		</tr>
	   		<% end %>
	 	</tbody>
	</table>
</div>