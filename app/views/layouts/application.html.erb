<!DOCTYPE html>
<html>
<head>
  	<title>David Garland | Potter</title>
  	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  	<%= csrf_meta_tags %>
</head>

<% if controller_name == "home" %>
	<body class="homeImage" data-ride=""><div class="bgImage1"><%= image_tag('sides.png') %></div>
		<div class="bgImage2"><%= image_tag('shapes.png') %></div>
		<div class="container theme-showcase" role="main">
			<%= render 'layouts/header' %>
			<%= yield %>
		</div>
		<% if user_signed_in? %>
			<div class="userInfo">
				<div>{ Logged in as <strong><%= current_user.email %></strong> }</div>
				<%= link_to 'Edit', edit_user_registration_path, class: "clearFixer" %> | 
				<%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: "clearFixer" %> |
				<%= link_to 'CMS', cms_path %></div>
			</div>
		<% end %>
	</body>
<% else %>
	<body>
		<div class="bgImage1"><%= image_tag('sides.png') %></div>
		<div class="bgImage2"><%= image_tag('shapes.png') %></div>
		<div class="container theme-showcase" role="main">
			<%= render 'layouts/header' %>
			<%= yield %>
		</div>
		<% if user_signed_in? %>
			<div class="userInfo">
				<div>{ Logged in as <strong><%= current_user.email %></strong> }</div>
				<%= link_to 'Edit', edit_user_registration_path, class: "clearFixer" %> | 
				<%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: "clearFixer" %> |
				<%= link_to 'CMS', cms_path %></div>
			</div>
		<% end %>
	</body>
<% end %>
</html>
