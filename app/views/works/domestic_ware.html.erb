<div class="marginTop">
<div class="col-md-7 clearSpace aboutPad2">
	<div class="item thumbnail" id="panel">
	  	<img id="largeImage" src="<%= @domestic_ware.image %>" data-holder-rendered="true"><br/>
		<div id="description">
			<%= @domestic_ware.description1 %><br/>
			<%= @domestic_ware.description2 %>
		</div>
	</div>
</div>
<div class="col-md-5 clearSpace" id="thumbs">
	<% @domestic_wares.each do |dw| %>
		<div class="thumbnail col-md-3">
			<%= image_tag(dw.image, :alt => "#{dw.description1} <br/> #{dw.description2}") %>
		</div>
	<% end %>
	<% if user_signed_in? %>
		<div class="thumbnail col-md-3">
			<%= link_to(image_tag('add.png'), new_domestic_ware_path) %>
		</div>
	<% end %>
</div>