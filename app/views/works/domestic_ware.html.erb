<div class="marginTop">
	<div class="col-md-8 clearSpace aboutPad2 largeImage">
		<div class="item thumbnail" id="panel">
		  	<img id="largeImage" src="<%= @domesticwaredisplay.image %>" data-holder-rendered="true"><br/>
			<div id="description">
				<%= @domesticwaredisplay.description1 %><br/>
				<%= @domesticwaredisplay.description2 %>
			</div>
		</div>
	</div>
	<div class="col-md-4 clearSpace" id="thumbs">
		<% @domesticwaresdisplay.each do |dw| %>
			<div class="thumbnail col-md-3">
				<%= image_tag(dw.image, :alt => "#{dw.description1} <br/> #{dw.description2}") %>
				<div class="number"><%= dw.id %></div>
			</div>
		<% end %>
		<% if user_signed_in? %>
			<div class="thumbnail col-md-3 end">
				<%= link_to(image_tag('add.png'), new_domesticware_path) %>
			</div>
		<% end %>
	</div>
	<div class="col-md-8">&nbsp;</div>
	<div class="col-md-4 end"><h2>Domestic Ware</h2></div>
</div>